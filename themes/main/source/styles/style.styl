$backgroundColor = #4480B8
$bodyBackgroundColor = rgba(20,20,20,0.7)
$shadowColor = rgba(20,20,20,0.3)
$lightTextColor = #f5f5f5
$textColor = #dddddd
$darkTextColor = #cccccc
$width = 1100px
$leftBlockWidth = 275px
$bodyPadding = 25px
$listPadding = 20px

@font-face
    font-family 'fontello'
    src url('../font/fontello.eot?96255276')
    src url('../font/fontello.eot?96255276#iefix') format('embedded-opentype'), url('../font/fontello.woff?96255276') format('woff'), url('../font/fontello.ttf?96255276') format('truetype'), url('../font/fontello.svg?96255276#fontello') format('svg')
    font-weight normal
    font-style normal

ico(text)
    position relative
    margin-left $bodyPadding

    &:before
        font-family: "fontello";
        content text
        position absolute
        left - $bodyPadding  

topIco(right) 
    position absolute
    bottom -40px
    right right

    &:before
        text-shadow none
        color $bodyBackgroundColor

.git
    ico('\f113')

.fb
    ico('\E802')

.in
    ico('\f0e1')    

.mail
    ico('\f0e0')    

.tele
    ico('\f124')    

html
    background $backgroundColor
    color $textColor
    font-family 'Open Sans', sans-serif
    font-size: 0.9em
    line-height 1.7em
    text-shadow: 0px 1px 1px $bodyBackgroundColor
    font-weight 100

@media (max-width: 1300px)
    html
        background $backgroundColor url('/images/background-small.jpg') no-repeat
        background-size cover
        background-attachment fixed

@media (min-width: 1301px) and (max-width: 2700px)
    html
        background $backgroundColor url('/images/background-medium.jpg') no-repeat
        background-size cover
        background-attachment fixed

@media (min-width: 2701px)
    html
        background $backgroundColor url('/images/background.jpg') no-repeat
        background-size cover
        background-attachment fixed

a
    color $lightTextColor
    text-decoration none
    border-bottom 1px dotted $lightTextColor

    &:hover
        border-bottom 1px solid $lightTextColor

body
    width $width
    margin 0 auto

.body
    list-style none
    margin 70px 0 40px
    padding 0

h1
    text-transform uppercase
    letter-spacing 0.05em
    font-size 2.3em
    font-weight 400
    color $lightTextColor
    padding-left $bodyPadding
    margin $bodyPadding 0 $bodyPadding + 5

h2
    font-size 1.2em
    font-weight 300
    color $lightTextColor
    margin 0


 .header
    text-align center
    position relative

    &__portrait
        width 170px
        height 170px
        border-radius 85px
        border: 2px solid $textColor
        box-shadow 0 2px 2px $bodyBackgroundColor
        margin 35px auto
        background url(/images/portrait.jpg) center center no-repeat
        background-size cover

    &__name
        font-size 3em
        padding 0

    &__description
        font-style italic
        font-size 1.2em
        color #333
        text-shadow none
        line-height 0em

