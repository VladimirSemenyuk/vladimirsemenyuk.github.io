.elements-list  
    list-style none
    margin 70px 0 40px
    padding 0
    box-shadow 0 2px 2px $shadowColor              

.element
    background-color $bodyBackgroundColor
    margin 1px 0
    padding 15px $bodyPadding 35px $leftBlockWidth + $bodyPadding

    &#element-work-history
    &#element-education
    &#element-skills
    &#element-articles
        padding-left $bodyPadding

        & h1
            margin-left $leftBlockWidth

.element-wrapper
    padding-left $bodyPadding

.summaries-list
.more-list
    padding-left $listPadding

    &__item
        list-style-type disc
        color $textColor
        font-weight 300

.blocks-list
    list-style none
    margin 0 
    padding 0

    &__item
        margin $bodyPadding 0

        &__dates
            font-style italic 
            color $darkTextColor

        &__left
            display inline-block
            vertical-align top
            width $leftBlockWidth - $bodyPadding * 2
            text-align right
            margin-right $bodyPadding * 2

            &__text
                color $lightTextColor

        &__right
            display inline-block
            vertical-align top   
            width $width - $leftBlockWidth - $bodyPadding * 3

.responsibilities-list
    font-style italic
    list-style-type disc
    color $darkTextColor
    padding-left $listPadding

.skills-list
.articles-list
.contacts-list
    padding 0
    list-style none

    &__item
        margin-bottom 5px

.contacts-list
    padding-left 3px        

