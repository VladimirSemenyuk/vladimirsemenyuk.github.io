@require "./mixins"

.post
    &__header
        background-color $bodyLightBackgroundColor
        padding $bodyPadding

    &__title
        color #333333
        margin 10px 0 20px
        letter-spacing 0em
        
    &__meta
        color $greyTextColor

        & *
            margin-right $bodyPadding * 2
            display inline-block  

    &__tags
        font-style italic
             

    &__content   
        & a
            color $greyTextColor
            text-decoration none
            border-bottom 1px dotted $greyTextColor

            &:hover
                color $blackTextColor
                border-bottom 1px dotted $blackTextColor

        & h2
        & h3
        & h4
        & h5
        & h6
            color $blackTextColor
            font-weight 400
            background-color $bodyLightBackgroundColor
            margin 0
            padding $bodyPadding $bodyPadding 10px
            

        & p
            color $blackTextColor    
            font-weight 400
            background-color $bodyLightBackgroundColor
            margin 0
            padding 10px $bodyPadding

        & figure
            margin 1px 0
            background-color $bodyBackgroundColor
            padding 0 $bodyPadding 

        &:after
            content ''
            background-color $bodyLightBackgroundColor
            display block
            padding-top $bodyPadding

    &__comments
        margin 1px 0
        background-color $bodyLightBackgroundColor
        padding $bodyPadding 

.clndr
    ico('\E800')

.tags
    ico('\E801')    

.doc
    ico('\F15C')    

.hljs
    display: block;
    overflow-x: auto;
    padding: 0.5em;
    color: $textColor;
    font-size 1.1em
    text-shadow: 0px 1px 1px $bodyBackgroundColor


    &-comment
    &-quote
        color: $darkTextColor;
        font-style: italic;


    &-keyword
    &-selector-tag
    &-subst
        color: $lightTextColor;
        font-weight: bold;


    &-number
    &-literal
    &-variable
    &-template-variable
    &-tag &-attr
        color: #008080;


    &-string
    &-doctag
        color: #d14;


    &-title
    &-section
    &-selector-id
        color: #900;
        font-weight: bold;


    &-subst
        font-weight: normal;


    &-type
    &-class &-title
        color: #458;
        font-weight: bold;


    &-tag
    &-name
    &-attribute
        color: #000080;
        font-weight: normal;


    &-regexp,
    &-link
        color: #009926;


    &-symbol,
    &-bullet
        color: #990073;


    &-built_in,
    &-builtin-name
        color: #0086b3;


    &-meta
        color: #cccccc;
        font-weight: bold;


    &-deletion
        background: #fdd;


    &-addition
        background: #dfd;


    &-emphasis
        font-style: italic;


    &-strong
        font-weight: bold;

