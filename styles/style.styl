$backgroundColor = #4480B8
$bodyBackgroundColor = rgba(20,20,20,0.7)
$shadowColor = rgba(20,20,20,0.3)
$lightTextColor = #f5f5f5
$textColor = #dddddd
$darkTextColor = #cccccc
$width = 1100px
$leftBlockWidth = 275px
$bodyPadding = 25px

html
    background $backgroundColor url('/images/background.jpg') no-repeat
    background-size cover
    background-attachment fixed
    color $textColor
    font-family 'Open Sans', sans-serif
    font-size: 0.9em
    line-height 1.7em
    text-shadow: 0px 1px 1px $bodyBackgroundColor
    font-weight 100

a
    color $lightTextColor
    text-decoration none
    border-bottom 1px dotted $lightTextColor

body
    width $width
    margin 0 auto

.body
    list-style none
    margin 70px 0 40px
    padding 0
    box-shadow 0 2px 2px $shadowColor

h1
    text-transform uppercase
    letter-spacing 0.05em
    font-size 2.3em
    font-weight 400
    color $lightTextColor
    padding-left $bodyPadding
    margin $bodyPadding 0 $bodyPadding + 5

h2
    font-size 1.2em
    font-weight 300
    color $lightTextColor
    margin 0


 .header
    text-align center

    &__portrait
        width 170px
        height 170px
        border-radius 85px
        box-shadow 0 2px 2px $bodyBackgroundColor
        margin 35px auto
        background url(/images/portrait.jpg) center center no-repeat
        background-size cover

    &__name
        font-size 3em
        padding 0

    &__description
        font-style italic
        font-size 1.2em
        color #333
        text-shadow none
        line-height 0em

.page
    background-color $bodyBackgroundColor
    margin 1px 0
    padding 15px $bodyPadding 35px $leftBlockWidth + $bodyPadding

    &#page-work-history
    &#page-education
    &#page-skills
    &#page-articles
        padding-left $bodyPadding

        & h1
            margin-left $leftBlockWidth

.page-wrapper
    padding-left $bodyPadding

.summaries-list
    padding-left $bodyPadding
    &__item
        list-style-type disc

.blocks-list
    list-style none
    margin 0 
    padding 0

    &__item
        margin $bodyPadding 0

        &__dates
            font-style italic 
            color $darkTextColor

        &__left
            display inline-block
            vertical-align top
            width $leftBlockWidth - $bodyPadding * 2
            text-align right
            margin-right $bodyPadding * 2

            &__text
                color $lightTextColor

        &__right
            display inline-block
            vertical-align top   
            width $width - $leftBlockWidth - $bodyPadding * 3

.responsibilities-list
    font-style italic
    list-style-type disc
    color $darkTextColor
    padding-left $bodyPadding

.skills-list
.articles-list
    padding 0
    list-style none

.skills-list
    &__item
        margin-bottom 35px

.skill-text 
    font-style italic
    color $darkTextColor
    
.skill-bar
    width: 100%
    height 1px
    background-color #666
    margin-top: 5px

    &__inner
        height 1px
        background-color $textColor

.degree
.certificates
    margin-left $leftBlockWidth

.degree-info
    font-style italic
    color $darkTextColor
    margin-bottom $bodyPadding
    margin-left $leftBlockWidth


