include ../config.pug

- var workingYearsCount = (new Date()).getFullYear() - START_CAREER_YEAR;

mixin summary_item(text)
    li.summaries-list__item!= text
    
mixin summary
        +page(SUMMARY_PAGE)
            ul.summaries-list
                +summary_item('More than ' + workingYearsCount + ' years of experience in web development.')
                +summary_item('Expert in building complex front-end web applications.')
                +summary_item('Expert in developing and maintaining libraries and framworks.')
                +summary_item('Strong in client-side perfomance optimizations.')
                +summary_item('Strong in internationalization and localization of application')
                +summary_item('Engineer\'s degree in Computer Science')